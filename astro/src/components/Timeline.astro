---
interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
---

<section class="w-full">
  {
    title && (
      <h2 class="text-3xl sm:text-4xl font-semibold font-space-mono mb-6 text-dark-purple">
        {title}
      </h2>
    )
  }
  <ol class="relative border-l-2 border-light-gray ps-6 space-y-10">
    <slot />
  </ol>
</section>
