---
import "../styles/global.css";
import { AstroFont } from "astro-font";
import { SEO } from "astro-seo";
import { getImagePath } from "astro-opengraph-images";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
}

const { title = "Observatorio de Derecho Informático Argentino" } = Astro.props;
const { url, site } = Astro;
const openGraphImageUrl = getImagePath({ url, site });

const DESCRIPTION =
  "Ámbito de intercambio y aprendizaje mutuo entre abogades e informátiques.";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={title}
      description="Ámbito de intercambio y aprendizaje mutuo entre abogades e informátiques."
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: openGraphImageUrl,
          url: url,
        },
        optional: {
          description: DESCRIPTION,
          siteName: "O.D.I.A.",
        },
      }}
      twitter={{
        card: "summary_large_image",
        creator: "@odiaasoc",
        title: title,
        description: DESCRIPTION,
        image: openGraphImageUrl,
      }}
    />
    <AstroFont
      config={[
        {
          name: "Raleway",
          src: [
            {
              style: "bold",
              weight: "700",
              path: "https://fonts.gstatic.com/s/raleway/v36/1Ptxg8zYS_SKggPN4iEgvnHyvveLxVs9pbCIPrEVIT9d0c8.woff2",
            },
          ],
          preload: true,
          display: "swap",
          fallback: "sans-serif",
        },
        {
          name: "Merriweather",
          src: [],
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300..900;1,300..900&display=swap",
          preload: true,
          display: "swap",
          fallback: "sans-serif",
        },
        {
          name: "Space Mono",
          src: [],
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap",
          preload: true,
          display: "swap",
          fallback: "monospace",
        },
      ]}
    />
  </head>
  <body>
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    min-width: 100%;
    min-height: 100%;
  }
</style>
