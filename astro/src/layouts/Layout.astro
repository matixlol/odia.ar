  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Observatorio de Derecho Informático Argentino</title>
    <meta
      name="description"
      content="Ámbito de intercambio y aprendizaje mutuo entre abogades e informátiques."
    />

    <AstroFont
      config={[
        {
          name: "Raleway",
          src: [
            {
              style: "bold",
              weight: "700",
              path: "https://fonts.gstatic.com/s/raleway/v36/1Ptxg8zYS_SKggPN4iEgvnHyvveLxVs9pbCIPrEVIT9d0c8.woff2",
            },
          ],
          preload: true,
          display: "swap",
          fallback: "sans-serif",
        },
        {
          name: "Merriweather",
          src: [],
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300..900;1,300..900&display=swap",
          preload: true,
          display: "swap",
          fallback: "sans-serif",
        },
