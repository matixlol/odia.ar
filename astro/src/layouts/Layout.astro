---
import "../styles/global.css";
import { SEO } from "astro-seo";
import { getImagePath } from "astro-opengraph-images";
import Footer from "../components/Footer.astro";

import "@fontsource-variable/merriweather";
import "@fontsource/space-mono";
import "@fontsource-variable/raleway";
import "@fontsource/redaction-20";

import SpeedInsights from "@vercel/speed-insights/astro";

import merriweatherWoff from "@fontsource-variable/merriweather/files/merriweather-latin-wght-normal.woff2?url";
import redaction20Woff from "@fontsource/redaction-20/files/redaction-20-latin-400-normal.woff2?url";

interface Props {
  title?: string;
}

const { title = "Observatorio de Derecho Informático Argentino" } = Astro.props;
const { url, site } = Astro;
const openGraphImageUrl = getImagePath({ url, site });

const DESCRIPTION =
  "Ámbito de intercambio y aprendizaje mutuo entre abogades e informátiques.";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={title}
      description="Ámbito de intercambio y aprendizaje mutuo entre abogades e informátiques."
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: openGraphImageUrl,
          url: url,
        },
        optional: {
          description: DESCRIPTION,
          siteName: "O.D.I.A.",
        },
      }}
      twitter={{
        card: "summary_large_image",
        creator: "@odiaasoc",
        title: title,
        description: DESCRIPTION,
        image: openGraphImageUrl,
      }}
    />
    <link
      rel="preload"
      href={merriweatherWoff}
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href={redaction20Woff}
      as="font"
      type="font/woff2"
      crossorigin
    />
  </head>
  <body>
    <slot />
    <Footer />
    <SpeedInsights />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    min-width: 100%;
    min-height: 100%;
  }
</style>
