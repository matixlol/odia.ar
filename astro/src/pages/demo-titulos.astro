---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main
    class="min-h-[70vh] bg-dark-purple text-light mx-auto max-w-6xl px-4 py-24 sm:py-32 flex flex-col items-start gap-8"
  >
    <h1
      class="text-4xl sm:text-6xl font-extrabold leading-[1.1] tracking-tight font-merriweather text-red-highlight text-shadow-[2px_3px_0px_var(--text-light)] text-shadow-light"
    >
      Observatorio de Derecho Informático Argentino
    </h1>
    <!-- Alternative color combinations for the h1 title -->
    <!-- Option 1: Turquoise with dark shadow -->

    <h1
      class="text-4xl sm:text-6xl font-extrabold leading-[1.1] tracking-tight font-merriweather text-turquoise-highlight text-shadow-[2px_3px_0px_var(--color-dark)]"
    >
      Observatorio de Derecho Informático Argentino
    </h1>
    <h1
      class="text-4xl sm:text-6xl font-extrabold leading-[1.1] tracking-tight font-merriweather text-light-gray text-shadow-[2px_3px_0px_var(--color-turquoise-highlight)]"
    >
      Observatorio de Derecho Informático Argentino
    </h1>
    <h1
      class="text-4xl sm:text-6xl font-extrabold leading-[1.1] tracking-tight font-merriweather text-turquoise-highlight text-shadow-[2px_3px_0px_var(--color-light-gray)]"
    >
      Observatorio de Derecho Informático Argentino
    </h1>

    <!-- Option 2: Light color with dark purple shadow -->

    <h1
      class="text-4xl sm:text-6xl font-extrabold leading-[1.1] tracking-tight font-merriweather text-light text-shadow-[2px_3px_0px_var(--color-dark-purple)]"
    >
      Observatorio de Derecho Informático Argentino
    </h1>

    <!-- Option 3: Dark with light shadow -->

    <h1
      class="text-4xl sm:text-6xl font-extrabold leading-[1.1] tracking-tight font-merriweather text-dark text-shadow-[2px_3px_0px_var(--color-light)]"
    >
      Observatorio de Derecho Informático Argentino
    </h1>

    <!-- Option 4: Light gray with red shadow -->

    <h1
      class="text-4xl sm:text-6xl font-extrabold leading-[1.1] tracking-tight font-merriweather text-light-gray text-shadow-[2px_3px_0px_var(--color-red-highlight)]"
    >
      Observatorio de Derecho Informático Argentino
    </h1>

    <!-- Option 5: Turquoise with light shadow -->

    <h1
      class="text-4xl sm:text-6xl font-extrabold leading-[1.1] tracking-tight font-merriweather text-turquoise-highlight text-shadow-[2px_3px_0px_var(--color-light)]"
    >
      Observatorio de Derecho Informático Argentino
    </h1>
  </main>
</Layout>
